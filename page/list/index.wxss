.second-block,.third-block {
    background-color:#fff;
    margin-top:30rpx;
    padding:30rpx 0;
}
.second-top {
    display: flex;
    align-items: center;
}
.second-log {
    width:60rpx;
    height:60rpx;
    margin-left:20rpx;
    border-radius: 50%;
}
