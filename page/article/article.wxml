        </video>
        <!-- <swiper class="banner" indicator-dots="true" autoplay="true" circular="true" interval="2000">
            <swiper-item wx:for="{{src}}">
                <image src="{{item}}" />
            </swiper-item>
        </swiper> -->
    </view>
    <view >
        <text class="article" decode="{{true}}">{{filter(article)}}</text>
    </view>
    <view class="bottom">
        <text >阅读 </text>
        <text class="yuedu">{{yuedu}}</text>
    </view>
</view>
<wxs module="filter">
    var filter = function (text) {
        if(!text) {
            return
        }
        var reg = getRegExp('\n','g')
        return text.replace(reg,'\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;')
    }
    module.exports = filter;
</wxs>