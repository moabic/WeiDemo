                <cover-image src="http://img.soogif.com/9KBJkggZhYYnTHtCgrqlC7iIaQx8MyXn.gif_s400x0" class="coverImageCat"></cover-image>
                <cover-view class="coverContent" bind:tap="videoTap">
                    <cover-image class="coverstaues" src="/image/shoucang.jpg"></cover-image>
                    <cover-view class="coverText">10""</cover-view>
                </cover-view>
