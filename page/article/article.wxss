/* page/article/article.wxss */
.wrapper {
    padding:10px 10px;
}
.title {
    font-size:50rpx;
}
.zuozhe,.time {
    font-size:30rpx;
}
.zuozhe {
    color:blueviolet;
}
.banner image,.banner{
    width:710rpx;
    height:500rpx;
    margin:35rpx 0;
}
.article {
    display:block;
    font-size:40rpx;
    color:#666;
    text-indent: 2em;
}
.bottom {
    margin-top:20rpx;
}
.yuedu {
    color:red;
}

/* 视频 */
.video,.coverWrapper {
    width:710rpx;
    height:500rpx;
    background-color:red;
    position: relative;
}
.coverContent {
    width:100rpx;
    height:100rpx;
    background-color:#fff;
    border-radius:50%;
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.coverstaues {
    width:40rpx;
    height:40rpx;
}
.coverText {
    font-size:25rpx;
}

/* 音乐播放 */
.audio-content {
    width:710rpx;
    height:200rpx;
    display:flex;
    justify-content: space-between;
    margin:30rpx 0;
}
.audio-left {
    width:200rpx;
    height:200rpx;
    display:flex;
    align-items: center;
    justify-content: center;
}
.audio-left image {
    position: absolute;
}
.bofang {
    width:80rpx;
    height:80rpx;
}
.zanting {
    width:120rpx;
    height:120rpx;
}
.audio-right {
    width:500rpx;
    height:200rpx;
    padding:20rpx 0;

}
.audio-title {
    font-size:36rpx;
}
.audio-form {
    font-size:30rpx;
    color:#666;
}
.audio-progress {
    margin:20rpx 0 10rpx 0;
    position: relative;
}
.progress-radius {
    width:25rpx;
    height:25rpx;
    background-color:#00b26a;
    border-radius: 50%;
    position: absolute;
    top:-50%;
}
.progress-time {
    width:450rpx;
    display: flex;
    justify-content: space-between;
    
}
.startingTime,.endTime {
    font-size:30rpx;
    color:rgb(172, 165, 165);
}