/* page/article/article.wxss */
.wrapper {
    padding:10px 10px;
}
.title {
    font-size:50rpx;
}
.zuozhe,.time {
    font-size:30rpx;
}
.zuozhe {
    color:blueviolet;
}
.banner image,.banner{
    width:710rpx;
    height:500rpx;
    margin:35rpx 0;
}
.article {
    display:block;
    font-size:40rpx;
    color:#666;
    text-indent: 2em;
}
.bottom {
    margin-top:20rpx;
}
.yuedu {
    color:red;
}

/* 视频 */
.video,.coverWrapper {
    width:710rpx;
    height:500rpx;
    background-color:red;
    position: relative;
}
.coverContent {
    width:100rpx;
    height:100rpx;
    background-color:#fff;
    border-radius:50%;
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.coverstaues {
    width:40rpx;
    height:40rpx;
}